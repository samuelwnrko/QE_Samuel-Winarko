{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "email": {
      "type": "string"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "name": {
      "type": "object",
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      },
      "required": [
        "firstname",
        "lastname"
      ]
    },
    "address": {
      "type": "object",
      "properties": {
        "city": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "number": {
          "type": "integer"
        },
        "zipcode": {
          "type": "string"
        },
        "geolocation": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "string"
            },
            "long": {
              "type": "string"
            }
          },
          "required": [
            "lat",
            "long"
          ]
        }
      },
      "required": [
        "city",
        "street",
        "number",
        "zipcode",
        "geolocation"
      ]
    },
    "phone": {
      "type": "string"
    }
  },
  "required": [
    "email",
    "username",
    "password",
    "name",
    "address",
    "phone"
  ]
}
